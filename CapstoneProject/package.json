{
  "name": "mern-ai-chatbot",
  "version": "1.0.0",
  "description": "MERN AI Chatbot with provider-agnostic backend, SSE streaming, session context + summarization",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "start": "pnpm -r start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "seed": "pnpm --filter @apps/api seed",
    "e2e": "pnpm --filter @apps/api e2e"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}


